<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_rounded"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/space_content">

    <TextView
        style="@style/TextPrimary.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_content"
        android:text="@string/enter_confirmation_code" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.chaos.view.PinView
            android:id="@+id/text_confirmation_code"
            style="@style/PinWidget.PinView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="numberDecimal"
            app:itemCount="4"
            app:lineColor="@color/primary"
            app:lineWidth="@dimen/separator_height"
            app:viewType="line" />

        <ProgressBar
            android:id="@+id/confirmation_code_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</LinearLayout>